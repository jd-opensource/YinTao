{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": false,
    "noImplicitAny":false,
    "alwaysStrict":true, // 严格模式
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom","es2021"
    ]
  },
  "include": [
    "src/**/*.ts",
    "./@types"],
  "exclude": [
    "node_modules"
  ],
  "rules":{
    "no-invalid-this":true,
  }
}
